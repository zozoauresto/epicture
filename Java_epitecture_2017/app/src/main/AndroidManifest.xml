<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fr.epicture.epicture">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".utils.BaseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.StartUpActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.UserPermissionActivity" />
        <activity android:name=".activities.MainActivity" />
        <activity android:name=".activities.MyPicturesActivity" />
        <activity android:name=".activities.AddPictureActivity" />
        <activity android:name=".activities.UploadImageActivity" />
        <activity android:name=".activities.LogoutActivity" />
        <activity android:name=".activities.ImageActivity" />
        <activity android:name=".activities.ImageElementActivity" />
        <activity android:name=".activities.SearchActivity" />
        <activity android:name=".activities.FavoritesActivity"></activity>
    </application>

</manifest>